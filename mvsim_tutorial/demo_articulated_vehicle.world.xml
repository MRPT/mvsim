	</element>

	<!-- ======================== Tractor (driven) ======================== -->
	<vehicle:class name="tractor_class">
		<dynamics class="ackermann">
			<!-- Rear wheels -->
			<rl_wheel pos="0  0.75" mass="5.0" width="0.25" diameter="0.55" />
			<rr_wheel pos="0 -0.75" mass="5.0" width="0.25" diameter="0.55" />

			<!-- Front wheels -->
			<fl_wheel mass="5.0" width="0.25" diameter="0.55" />
			<fr_wheel mass="5.0" width="0.25" diameter="0.55" />
			<f_wheels_x>2.0</f_wheels_x>
			<f_wheels_d>1.5</f_wheels_d>
			<max_steer_ang_deg>35.0</max_steer_ang_deg>

			<chassis mass="500.0" zmin="0.20" zmax="1.50">
				<shape>
					<pt>-0.6 -0.8</pt>
					<pt>-0.6  0.8</pt>
					<pt> 2.6  0.8</pt>
					<pt> 2.6 -0.8</pt>
				</shape>
			</chassis>

			<!-- Motor controller: twist with PID -->
			<controller class="twist_front_steer_pid">
				<KP>1000</KP>
				<KI>50</KI>
				<I_MAX>20</I_MAX>
				<KD>0</KD>
				<V>0.0</V>
				<W>0</W>
				<max_torque>500</max_torque>
			</controller>

			<drivetrain type="open_rear">
			</drivetrain>
		</dynamics>

		<friction class="default">
			<mu>0.7</mu>
			<C_damping>5</C_damping>
		</friction>
	</vehicle:class>

	<vehicle name="tractor" class="tractor_class">
		<init_pose>0 0 0</init_pose>
	</vehicle>

	<!-- ======================== Trailer (passive) ======================== -->
	<vehicle:class name="trailer_class">
		<dynamics class="differential_4_wheels">
			<!-- 4 passive wheels -->
			<lr_wheel pos="0.0  0.7" mass="4.0" width="0.22" diameter="0.50" />
			<rr_wheel pos="0.0 -0.7" mass="4.0" width="0.22" diameter="0.50" />
			<lf_wheel pos="2.5  0.7" mass="4.0" width="0.22" diameter="0.50" />
			<rf_wheel pos="2.5 -0.7" mass="4.0" width="0.22" diameter="0.50" />

			<chassis mass="300.0" zmin="0.30" zmax="2.00">
				<shape>
					<pt>-0.5 -0.8</pt>
					<pt>-0.5  0.8</pt>
					<pt> 3.5  0.8</pt>
					<pt> 3.5 -0.8</pt>
				</shape>
			</chassis>

			<!--
			     IMPORTANT: Use "raw" controller with zero torque to make
			     this a passive (unpowered) vehicle. The trailer is pulled
			     entirely by the tractor through the pin joint.
			-->
			<controller class="raw">
			</controller>
		</dynamics>

		<!-- Low friction for passive rolling -->
		<friction class="default">
			<mu>0.5</mu>
			<C_damping>1.0</C_damping>
		</friction>
	</vehicle:class>

	<vehicle name="trailer" class="trailer_class">
		<!-- Place it behind the tractor.
		     The tractor rear axle is at x=0, and the trailer coupling point
		     is at +1.0 in trailer-local coords, so position it so the
		     coupling points overlap: tractor anchor at x=-0.8,
		     trailer anchor at x=+2.0.
		     Initial trailer origin: tractor(0,0) + (-0.8) - (2.0) = -2.8
		-->
		<init_pose>-2.8 0 0</init_pose>
	</vehicle>


	<!-- ======================== Pin joint (hitch) ======================== -->
	<!--
	     Connects the rear of the tractor to the front of the trailer.
	     - Tractor: anchor at x=-0.8 (behind rear axle), y=0 (centerline)
	     - Trailer: anchor at x=+2.0 (the drawbar tip), y=0
	     - The revolute joint allows free rotation (like a real hitch pin).
	     - Optional: enable_limit with angle bounds to prevent jack-knifing.
	-->
	<joint type="revolute"
		body_a="tractor"  anchor_a="-0.8 0.0"
		body_b="trailer"  anchor_b=" 2.0 0.0"
		enable_limit="true"
		lower_angle_deg="-75"
		upper_angle_deg="75"
	/>

	<!-- ======================== Example rope joint (commented out) ======= -->
	<!-- Uncomment to add a rope between two vehicles instead of a pin:
	<joint type="distance"
		body_a="tractor"  anchor_a="-0.8 0.0"
		body_b="trailer"  anchor_b=" 2.0 0.0"
		max_length="3.5"
		min_length="0.0"
		stiffness="0.0"
		damping="0.0"
	/>
	-->
